            new Pair<>(Material.WHITE_STAINED_GLASS_PANE, ChatColor.WHITE),
            new Pair<>(Material.ORANGE_STAINED_GLASS_PANE, ChatColor.GOLD), // Bukkit Orange -> ChatColor Gold
